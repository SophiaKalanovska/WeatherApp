<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <android.support.v7.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/toolbarChild"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:background="@android:color/holo_blue_dark"
        android:clickable="true"
        >
    </android.support.v7.widget.Toolbar>


    <TextView
        android:id="@+id/textdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        tools:text = "date"
        android:paddingLeft="24dp"
        android:layout_below="@+id/textTitleDetail"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="?android:attr/colorControlNormal"
        android:fontFamily="sans-serif-condensed" />


    <TextView
        android:id="@+id/textDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        tools:text = "description"
        android:layout_margin="16dp"
        android:layout_alignStart="@+id/imageViewDesc"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/imageViewDesc"
        android:textColor="?android:attr/colorControlNormal" />




    <TextView
        android:id="@+id/wind"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/wind"
        android:paddingLeft="24dp"
        android:paddingTop="8dp"
        android:textSize="24sp"
        android:layout_below="@+id/pressure"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@android:color/black"
        android:fontFamily="sans-serif-condensed" />

    <TextView
        android:id="@+id/textTitleDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        tools:text = "Title"
        android:paddingLeft="24dp"
        tools:textStyle="bold"
        android:textSize="30sp"
        android:paddingTop="16dp"
        android:fontFamily="sans-serif-condensed"
        android:textColor="@android:color/black"
        android:layout_below="@+id/toolbarChild"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/humidity"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/humidity"
        android:paddingLeft="24dp"
        android:paddingTop="40dp"
        android:textSize="24sp"
        android:textColor="@android:color/background_dark"
        android:fontFamily="sans-serif-condensed"
        android:layout_below="@+id/textmindetail"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/pressure"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/pressure"
        android:paddingLeft="24dp"
        android:paddingTop="8dp"
        android:textSize="24sp"
        android:textColor="@android:color/black"
        android:fontFamily="sans-serif-condensed"
        android:layout_below="@+id/humidity"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textmindetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        tools:text = "12 ℃"
        android:paddingLeft="72dp"
        android:paddingTop="16dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:layout_below="@+id/textmaxdetail"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textmaxdetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        tools:text = "12 ℃"
        android:paddingLeft="64dp"
        android:paddingTop="40dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Display3"
        android:textColor="@android:color/black"
        android:fontFamily="sans-serif-condensed"
        android:layout_below="@+id/textdate"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/imageViewDesc"
        android:layout_width= "162dp"
        android:layout_height="115dp"
        app:srcCompat="@drawable/art_clear"
        android:gravity="right"
        android:layout_marginTop="18dp"
        android:layout_marginRight="24dp"
        android:layout_marginEnd="24dp"
        android:layout_below="@+id/textdate"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>